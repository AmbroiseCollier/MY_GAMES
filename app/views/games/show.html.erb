<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="mainpanel">
        <h1>About the game</h1>
          <h2><%= @game.address %></h2>
          <h3><%= @game.date %></h3>
          <h3><%= @game.city %></h3>
      </div>
    </div>
    <div class="col-4">
      <div class="sidebar">
        <h2>Action Control</h2>
        <div class="d-flex">
          <i class="me-2"><%= link_to "Back ",root_path %></i>
          <i class="me-2"><%= link_to "Edit ",edit_game_path %></i>
          <i class="me-2"><%= link_to "delete", game_path(@game),
              method: :delete,
              data: {confirm: "are you sure?"},
              class: "nav-item px-1 text-danger"
            %></i>
        </div>
      </div>
    </div>
  </div>

</div>
