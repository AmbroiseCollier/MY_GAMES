<div class="container">
  <div class="row">
    <div>
      <h1 class="header-title">About the game</h1>
      <div class="show-container">
          <img src="<%= @game.picture_url %>">
          <div class="infos">
            <div class="adress">
              <div class="adress-icon">
                <h3>üìç</h3>
              </div>
              <div class="adress-content">
                <p><%= @game.address %></p>
                <p><%= @game.city %></p>
              </div>
            </div>
            <div class="show-date">
              <div class="date-icon">
                <h3>üìÖ</h3>
              </div>
              <div class="date-content">
                <p><%= @game.date %></p>
              </div>
            </div>
          </div>
      </div>

      <div class="controls">
          <%= link_to "‚¨ÖÔ∏è Back ",root_path %>
          <% if current_player == @game.creator %>
             <%= link_to "‚úíÔ∏è Edit ",edit_game_path %>
             <%= link_to "‚úíÔ∏èDelete", game_path(@game),
              method: :delete,
              data: {confirm: "Are you sure?"},
              class: "nav-item px-1"
            %>
          <% end %>
      </div>
    </div>
  </div>

<div class="row">
  <div class="col-8">
    <h2>here the map</h2>
  </div>

  <div class="col-4">
    <% if  current_player != @game.creator%>
    <h2>Do you want to play ?</h2>
     <%= simple_form_for [@game, @reservation] do |f| %>
        <%= f.input :message, placeholder: "Message your rival" %>
        <%= f.submit "Let's ball", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>

</div>





</div>
