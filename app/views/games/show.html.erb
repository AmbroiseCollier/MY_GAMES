<div class="container">
  <div class="row">
    <div>
      <h1 class="header-title">About the game</h1>
      <div class="show-container">
          <img src="<%= @game.picture_url %>">
          <div class="infos">
            <div class="adress">
              <div class="adress-icon">
                <h3>üìç</h3>
              </div>
              <div class="adress-content">
                <p><%= @game.address %></p>
                <p><%= @game.city %></p>
                <% if  current_player == @game.creator%>
                  <p><strong>Created by you</strong></p>
                <% else %>
                  <p>With: <strong><%="#{@game.creator.name} #{@game.creator.last_name}"%></strong></p>
                  <p>Contact: <%= "#{@game.creator.email}"%></p>
                  <p>Experience: <%="#{@game.creator.years}"%> years</p>
                  <p>Age: <%="#{@game.creator.age}"%></p>
                <% end %>
              </div>
            </div>
          <div class="show-date">
            <div class="date-icon">
              <h3>üìÖ</h3>
            </div>
            <div class="date-content">
              <p><%= @game.date %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="controls">
        <%= link_to "‚¨ÖÔ∏è Back ",root_path %>
        <% if current_player == @game.creator %>
            <%= link_to "‚úíÔ∏è Edit ",edit_game_path(@game) %>
            <%= link_to "‚úíÔ∏èDelete", game_path(@game),
            method: :delete,
            data: {confirm: "Are you sure?"},
            class: "nav-item px-1"
          %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="list col-12">
      <% if  current_player == @game.creator%>
        <h2>Interested people</h2>
        <% @reservations.each do |reservation| %>
          <% player = Player.find(reservation.player_id) %>
          <div class="show-card">
            <div class="card-product-infos">
              <h2><%= player.name %> <%= player.last_name %></h2>
              <p>Email :<%= player.email %></p>
              <p>Age: <%=player.age%> | Experience: <%=player.years%> years</p>
              <div class="show-message">
                <p><%= player.name %> send this message :</p>
                <i><%= reservation.message %></i>
              </div>
            </div>
            <div class="card-nav">
              <% if reservation.accepted? %>
                <h2>Reservation accepted</h2>
              <% elsif reservation.rejected? %>
                <p><strong>Sorry bro, you have been ditched!</strong></p>
              <% else %>
                <li><%=link_to 'Accept', reservation_path(reservation, status: :accepted), method: :patch ,  class: "accept-button nav-item px-1" %></li>
                <li><%=link_to 'Cancel', reservation_path(reservation, status: :rejected),  method: :patch, data: { confirm: "Are you sure?" }, class: "reject-button nav-item px-1" %></li>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-4">
      <% if  current_player != @game.creator%>
        <h2>Do you want to play ?</h2>
        <%= simple_form_for([@game, @reservation]) do |f| %>
          <%= f.input :message, placeholder: "Write your rival" %>
          <%= f.submit "Let's ball", class: "create-game-button" %>
        <% end %>
      <% end %>
    </div>

  <div class="row">
    <div class="col">
      <div id="reviews">
        <h2> <%= pluralize @game.reviews.size, "review" %></h2>
        <% if @game.reviews.blank? %>
          <p>Be the first to leave a review for this game</p>
        <% else %>
          <% @game.reviews.each do |review| %>
            <div class="review">
            <p>By <strong><%= review.player.name  %></strong></p>
            <i><%= review.content %></i>
            <p id="review-date">On: <%= time_ago_in_words review.created_at %> </p>
            </div>
          <% end %>
        <% end %>

        <%= simple_form_for([ @game, @review ]) do |f| %>
          <%= f.input :content, placeholder: "Share your thoughts...and post something " %>
          <%= f.input :rating, collection: Review::RATING %>
          <%= f.submit "Review", class: "create-game-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
