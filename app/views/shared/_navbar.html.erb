<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/7/72/Basketball_Clipart.svg/1200px-Basketball_Clipart.svg.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if player_signed_in? %>
            <form class="d-flex my-2 my-lg-0">
              <input class="form-control me-2" name="city" type="search" placeholder="City" aria-label="Search" value="<%= params[:city] %>">
              <input class="form-control me-2" name="date" type="date" value="<%= params[:date] %>">
              <button class="btn navbar-search mr-2" type="submit" id="navbar-search">Search</button>
            </form>
    </div>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <li class="btn navbar-button my-2 my-sm-0" href="#">
            <%= link_to "Create a game", new_game_path %>
          </li>

          <li class="nav-item dropdown">
            <%= image_tag "https://toppng.com/uploads/preview/user-account-management-logo-user-icon-11562867145a56rus2zwu.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_player_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Dashboard", new_player_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
</div>
  </div>
</div>
